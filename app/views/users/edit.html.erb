<h1 class="login-header">Customize your User Profile</h1>
<div class="row">
  <div class="small-6 columns">
    <%= form_for @user do |f| %>

      <%= f.label :username, "Username:" %>
      <%= f.text_field :username, placeholder: @user.username %><br>
      <%= f.label :password, "Password:" %>
      <%= f.password_field :password %><br>
      <%= f.label :password_confirmation, "Confirm Password:" %>
      <%= f.password_field :password_confirmation %><br>
	</div>
		<div class="small-6 columns">
			<%= f.label :name, "Name:" %>
			<%= f.text_field :name, placeholder: @user.name %><br>
      <%= f.label :email, "Email:" %>
      <%= f.text_field :email, placeholder: @user.email %><br>
      <%= f.label :avatar, "Avatar link:" %>
      <%= f.text_field :avatar, placeholder: @user.avatar %><br>
	</div>
      
      
      <div class="row">
      	<div class="small-5 small-centered columns">
					<div><%= f.submit class: 'button  large  expand round' %></div>
					<%end%>
				</div>
      </div>

</div>
