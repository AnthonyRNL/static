<div class="sticky">

	<!--    NAVIGATION BAR   -->
	<nav class="top-bar" data-topbar role="navigation">
		<ul class="title-area">
			<li class="name">
				<a href="/posts" >static-address</a>
			</li>
			<li class="toggle-topbar menu-icon">
				<a href="#"><span>Menu</span></a>
			</li>
		</ul>
		<section class="top-bar-section">
			<!-- Left Nav Section -->
			<ul class="left">
				<li><a><%= link_to "Most Recent", posts_topten_path%> </a></li>
				<li class="divider"></li>
				<li><a href="/posts/new">Submit New!</a></li>
			</ul>

			<!-- Right Nav Section -->
			<ul class="right">
				<li><%= form_tag("/searches", method: "get") do %>
						<%= label_tag(:q, "Search a song")%>
						<%= text_field_tag(:q)%>
						<%= submit_tag("enter")%>
					<%end%>
				</li>
				<li><a><%if session[:user_id] %>
        <%= link_to User.find(session[:user_id]).username, user_path(session[:user_id]) %>
        <% else%>
        <%= "signin"%>
        <%end%>

      </a></li>
				<li class="divider"></li>
				<li><a><%= link_to "Logout", sessions_path, method: :delete%></a></li>
			</ul>
		</section>
	</nav>
</div>
