<h1 class="login-header">Create a New Post!</h1>
<div class="new-post-container row">
	<div class="small-6 small-centered columns">
		
<%= form_for @post do |f| %>

<!-- hidden_field_tag(:user_id, session[:user_id]) #need to check this-->
<%= f.label :title, 'Song Title' %>
<%= f.text_field :title, placeholder: 'Song Title' %> <br>
<%= f.label :artist, 'Artist' %>
<%= f.text_field :artist, placeholder: 'Artist' %> <br>
<%= f.label :genre, 'Genre' %>
<%= f.text_field :genre, placeholder: 'Genre' %> <br>
<%= f.label :content, 'Body Content' %>
<%= f.text_area :content, placeholder: 'Enter your body content here!' %>

<div id="radio-row" class="row">
	<div class="small-6 columns">
		<span data-tooltip aria-haspopup="true" class="has-tip" title="At the soundcloud player you want to share, simply click 'Share' and copy and paste the URL into the text area"><%= f.label :soundfile, 'Soundcloud'%></span>
		<%= f.radio_button(:media_selection, '1')%><br/>
	</div>

	<div class="small-6 columns">
		<span data-tooltip aria-haspopup="true" class="has-tip" title="Go to the Youtube page for the song you want, then you can either copy & paste the URL or the share URL."><%= f.label :soundfile, 'YouTube'%></span>
			<%= f.radio_button(:media_selection, '2')%>
	</div>
	
		</div>
		<div id="soundcloud-input" class="hidden"><%= f.text_area :soundcloudfile, placeholder: 'Soundcloud Link' %></div>
		<div id="youtube-input" class="hidden"><%= f.text_area :youtubefile, placeholder: 'YouTube Link' %></div><br/>		
		<div id="new-button-submit"><%= f.submit class: 'button  large  expand round' %></div>
		
		<% end %>
	</div>
</div>

<script> 
	
	var mediaSelection = 0;
	$('#post_media_selection_1').on("click", function(){
		$('#soundcloud-input').toggle("show");
		$('#youtube-input').hide();
		mediaSelection = 1;
	});
	$('#post_media_selection_2').on("click", function(){
		$('#youtube-input').toggle("show");
		$('#soundcloud-input').hide();
		mediaSelection = 2;
	});
</script>